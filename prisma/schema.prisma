generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id         String   @id @default(uuid())
  name       String
  birthDate  DateTime
  refClass   String
  schoolYear String
  class      Class    @relation(fields: [refClass], references: [id])
  grades     Grade[] 
}

model Class {
  id         String    @id @default(uuid())
  name       String
  schoolYear String
  students   Student[] // Relação com os alunos
}

model Teacher {
  id         String  @id @default(uuid())
  name       String
  birthDate  DateTime
  refSubject String
  subject    Subject @relation(fields: [refSubject], references: [id])
}

model Subject {
  id   String @id @default(uuid())
  name String
  grades  Grade[]
  teachers Teacher[]
}

model Grade {
  id          String  @id @default(uuid())
  refStudent  String
  refSubject  String
  refBimester String
  schoolYear  String
  p1          Float
  p2          Float
  rec         Float
  average     Float
  student     Student @relation(fields: [refStudent], references: [id])
  subject     Subject @relation(fields: [refSubject], references: [id])
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  role     String
}